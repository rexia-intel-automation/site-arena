# Configurações Gerais do Site
Options -Indexes
AddDefaultCharset UTF-8

# Forçar MIME correto para CSS
AddType text/css .css

# ======================================================================
# 1. SEGURANÇA E PERFORMANCE (Cabeçalhos e Cache)
# ======================================================================
<IfModule mod_headers.c>
    # Bloqueia iframes de outros sites (proteção contra Clickjacking)
    Header set X-Frame-Options "SAMEORIGIN"
    # Proteção contra XSS
    Header set X-XSS-Protection "1; mode=block"
    # Impede o navegador de tentar adivinhar o tipo de arquivo (Sniffing)
    Header set X-Content-Type-Options "nosniff"
</IfModule>

<IfModule mod_deflate.c>
    # Compactar arquivos para carregar mais rápido
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

<IfModule mod_expires.c>
    # Cache do navegador (para imagens, css, etc não serem baixados toda hora)
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
</IfModule>

# ======================================================================
# 2. ROTEAMENTO E URL AMIGÁVEL
# ======================================================================
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # REGRA DE OURO: Se o arquivo ou diretório existe, NÃO FAÇA NADA.
    # Isso garante que a pasta /admin, imagens, css e js funcionem sem loops.
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Tratamento de extensão .php (URL Amigável)
    # Ex: Transforma /contato em /contato.php automaticamente
    # Isso funciona inclusive para /admin/login (se virar /admin/login.php)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.*)$ $1.php [L]

    # (Opcional) Forçar HTTPS
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# ======================================================================
# 3. PÁGINAS DE ERRO PERSONALIZADAS
# ======================================================================
ErrorDocument 403 /404.php
ErrorDocument 404 /404.php
ErrorDocument 500 /500.php
ErrorDocument 503 /500.php
